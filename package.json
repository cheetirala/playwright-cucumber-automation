{
  "name": "playwright-ts-automation",
  "version": "1.0.0",
  "description": "playwright typescript automation framework with cucumber BDD",
  "main": "index.js",
  "scripts": {
    "pretest": "npx ts-node src/helper/report/init.ts",
    "test": "cross-env ENV=prod FORCE_COLOR=0 cucumber-js --config=config/cucumber.js || true",
    "posttest": "npx ts-node src/helper/report/report.ts",
    "test:failed": "cucumber-js -p rerun @rerun.txt"
  },
  "keywords": [],
  "author": "Koteswara Cheetirala",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "@types/winston": "^2.4.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.3",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "ts-node": "^10.9.2",
    "winston": "^3.19.0"
  }
}
